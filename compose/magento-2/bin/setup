#!/bin/bash
./bin/cli chmod u+x bin/magento

DOMAIN=${PWD##*/}
DB=$(echo $DOMAIN | cut -f1 -d.)

docker-compose exec phpfpm /usr/local/bin/php ./bin/magento setup:install \
  --db-host=db \
  --db-name=$DB \
  --db-user=$DB \
  --db-password=$DB \
  --base-url=http://$DOMAIN/ \
  --admin-firstname=Admin \
  --admin-lastname=Magento \
  --admin-email=support@magextensions.com.au \
  --admin-user=admin \
  --admin-password=admin \
  --backend-frontname=admin \
  --language=en_US \
  --currency=USD \
  --timezone=America/New_York \

./bin/fixperms

echo "Installing sample data.."
./bin/magento sampledata:deploy
./bin/magento setup:upgrade
./bin/magento setup:di:compile
./bin/magento setup:static-content:deploy -f

echo "Turning on developer mode.."
./bin/magento deploy:mode:set developer

./bin/magento indexer:reindex
